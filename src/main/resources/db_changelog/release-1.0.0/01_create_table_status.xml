<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

    <changeSet id="create_table_status" author="borisov-tyu">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="status"/>
            </not>
        </preConditions>
        <createTable tableName="status">
            <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="status_pkey"/>
            </column>
            <column name="status_name" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="status_descriptions" type="VARCHAR(256)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <insert tableName="status">
            <column name="id" value="0"/>
            <column name="status_name" value="NEW"/>
            <column name="status_descriptions" value="Пришел новый документ из Диасофт"/>
        </insert>

        <insert tableName="status">
            <column name="id" value="1"/>
            <column name="status_name" value="PARSED_SUCCESS"/>
            <column name="status_descriptions" value="Документ из диасофт успешно распарсен"/>
        </insert>

        <insert tableName="status">
            <column name="id" value="-1"/>
            <column name="status_name" value="FLK_ERROR"/>
            <column name="status_descriptions" value="Ошибка ФЛК"/>
        </insert>

        <insert tableName="status">
            <column name="id" value="2"/>
            <column name="status_name" value="UPDATED"/>
            <column name="status_descriptions" value="Обновлен данными из свои инвестиции"/>
        </insert>

    </changeSet>
</databaseChangeLog>