<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

    <changeSet id="create_table_security" author="borisov-tyu">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="security"/>
            </not>
        </preConditions>
        <createTable tableName="security">
            <column name="id" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="security_pkey"/>
            </column>
            <column name="isin" type="VARCHAR(25)">
                <constraints nullable="false"/>
            </column>
            <column name="reg_number" type="VARCHAR(25)">
                <constraints nullable="false"/>
            </column>
            <column name="nsdr" type="VARCHAR(25)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>